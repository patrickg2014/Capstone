<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout = "@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/unique_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="80dp"
        android:maxWidth="80dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/unique_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/clickToView"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/unique_item_icon"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
        <TextView
        android:id="@+id/unique_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/unique_item_icon"
        android:layout_alignLeft="@+id/unique_item_name"
        android:text="Building Type"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
       <TextView
        android:id="@+id/clickToView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/unique_item_icon"
        android:layout_alignParentRight="true"
        android:text="Click to View"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>